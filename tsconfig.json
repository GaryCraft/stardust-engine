{
	"compilerOptions": {
		"module": "NodeNext",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "ESNext",
		"moduleResolution": "NodeNext",
		"removeComments": true,
		"noEmit": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strict": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@src/*": [
				"src/*"
			],
			"@config/*": [
				"config/*"
			]
		}
	},
	"include": [
		"./src/**/*.ts",
		"./.stardust/typings/**/*.d.ts",
		"./typings/**/*.d.ts",
		"./modules/**/*.ts"
	],
	"exclude": [
		"./web/**",
	]
}